<!DOCTYPE html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <title>Lista de Clientes Inadimplentes</title>
    <link rel="stylesheet" href="/static/stylesheets/style.css" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Baloo+Bhai|Candal|Chewy&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css"
        integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">

</head>

<body>
    <div class="container">
        <h2>Lista de Clientes Inadimplentes</h2>
        <div class="row">
            <div class="col-sm-12">
                <form action="/defaulters" method="GET" class="todo-header">
                    <div class="form-group">
                        <label for="exampleFormControlInput1">Informe o nome:</label>
                        <input type="text" class="form-control" id="content" name="content" placeholder="Nome">
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Buscar</button>
                    </div>
                </form>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <table class="table table-bordered table-sortable">
                    <thead>
                        <tr>
                            <th>Nome Cliente</th>
                            <th>Data Venda</th>
                            <th>Desde</th>
                            <th>Valor</th>
                            <th>Valor Pago</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% sales.forEach(details=> { %>
                            <tr>
                                <td>
                                    <%= details.nome %>
                                </td>
                                <td>
                                    <%= details.dataVenda %>
                                </td>
                                <td>
                                    <%= details.dataPrevistaPagamento %>
                                </td>
                                <td>
                                    <%= details.valorTotal %>
                                </td>
                                <td>
                                    <%= details.valorPago %>
                                </td>
                            </tr>
                            <% }) %>

                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <script src="/static/js/tablesort.js"></script>
</body>